<!doctype html>
<html class="no-js" lang="en">
	<head>
        <title>{{ .parent.Title }}</title>
        <meta name="HandheldFriendly" content="True">
        <meta name="MobileOptimized" content="320">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="twitter:card" content="summary"></meta>
        <meta property="og:url" content="https://hn.adhikasp.my.id/item?id={{ .parent.ID }}" />
        <meta property="og:title" content="{{ .parent.Title }}" />
	</head>
    <body>
        {{ range .items }}
            <div style="padding-left: {{ multiply .Depth 1 }}em;">
                <h1>
                    {{ .Title }}
                </h1>
                <p>{{ unescapeHtml .Text }}</p>
                <p><a href="{{ unescapeHtml .URL }}">{{ .URL }}</a>
                <p>By: {{ .By }}</p>
                <hr />
            </div>
        {{ end }}
    </body>
</html>